<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.FTR" parent="Theme.Material3.DayNight.NoActionBar" />

    <style name="Base.FTR.TEXT" parent="Base.FTR">
        <item name="fontFamily">@font/nanum_barun_gothic</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Base.FTR.BUTTON_TEXT" parent="Base.FTR">
        <item name="fontFamily">@font/binggrae_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Base.FTR.MainButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/Base.FTR.BUTTON_TEXT</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:paddingStart">28dp</item>
        <item name="android:paddingEnd">28dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:background">@drawable/btn_white_green_36dp</item>
    </style>

