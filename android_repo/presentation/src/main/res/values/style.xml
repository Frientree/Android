<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.FTR" parent="Theme.Frientree" />

    <style name="Base.FTR.Text" parent="Base.FTR">
        <item name="android:fontFamily">@font/nanum_barun_gothic</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Base.FTR.Text.BOLD" parent="Base.FTR.Text">
        <item name="android:fontFamily">@font/nanum_barun_gothic_bold</item>
    </style>

    <style name="Base.FTR.Text.SMALL" parent="Base.FTR.Text">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Base.FTR.Text.BIG" parent="Base.FTR.Text">
        <item name="android:textSize">24sp</item>
    </style>


    <style name="Base.FTR.MainTitleText" parent="Base.FTR.Text">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontWeight">800</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Base.FTR.ButtonText" parent="Base.FTR">
        <item name="fontFamily">@font/binggrae_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Base.FTR.TITLE_TEXT" parent="Base.FTR">
        <item name="fontFamily">@font/binggrae_bold</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Base.FTR.MENU_TEXT" parent="Base.FTR">
        <item name="fontFamily">@font/binggrae_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Base.FTR.MY_INFO_TEXT" parent="Base.FTR">
        <item name="fontFamily">@font/binggrae</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Base.FTR.SMALL_BUTTON_TEXT_BOLD" parent="Base.FTR">
        <item name="fontFamily">@font/binggrae_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Base.FTR.SMALL_TEXT" parent="Base.FTR">
        <item name="fontFamily">@font/binggrae</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Base.FTR.SMALL_BUTTON_TEXT" parent="Base.FTR">
        <item name="fontFamily">@font/binggrae</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Base.FTR.SMALL_DIALOG_TITLE" parent="Base.FTR">
        <item name="fontFamily">@font/binggrae_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Base.FTR.APP_BAR_TITLE_TEXT" parent="Base.FTR">
        <item name="fontFamily">@font/binggrae_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Base.FTR.DIALOG_TEXT" parent="Base.FTR">
        <item name="fontFamily">@font/binggrae</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Base.FTR.MainButton" parent="@style/Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/Base.FTR.ButtonText</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:paddingStart">28dp</item>
        <item name="android:paddingEnd">28dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:background">@drawable/btn_white_green_36dp</item>
    </style>

    <style name="Base.FTR.ELEVATED_BUTTON" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/binggrae</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="Base.FTR.EDIT_TEXT" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/Base.FTR.Text</item>
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:background">@drawable/bg_white_radius_16dp_with_stroke</item>
    </style>

    <style name="Base.FTR.EDIT_TEXT.EXPENDED" parent="Base.FTR.EDIT_TEXT">
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="Base.FTR.TextView" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/Base.FTR.Text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Base.FTR.TextView.LABEL" parent="Base.FTR.TextView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Base.FTR.TextView.WELCOME_TITLE" parent="Base.FTR.TextView">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Base.FTR.Button" parent="@style/Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/Base.FTR.Text</item>
    </style>

    <style name="Base.FTR.Button.CONFIRM" parent="@style/Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/Base.FTR.Text.SMALL</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_small_confirm</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>
    <style name="Base.FTR.Button.DIALOG_BUTTON" parent="@style/Base.FTR.Button.CONFIRM">
        <item name="android:background">@drawable/btn_white_with_stroke_36dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">10dp</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="NumberPickerStyle" >
        <item name="android:textSize">20sp</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:colorControlNormal">@color/black</item>
    </style>

    <style name="Base.FTR.EDIT_TEXT.TRANSPARENT" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/Base.FTR.Text</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Base.FTR.CHIP" parent="Widget.Material3.Chip.Assist">
        <item name="android:textAppearance">@style/Base.FTR.SMALL_BUTTON_TEXT</item>
        <item name="chipBackgroundColor">@color/bg_fruit_chip_selector</item>
        <item name="chipStrokeColor">@color/gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
