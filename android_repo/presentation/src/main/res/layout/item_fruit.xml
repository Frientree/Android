<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="12dp"
    android:paddingHorizontal="16dp"
    android:gravity="center_vertical"
    android:background="@drawable/bg_white_radius_30dp"
    android:elevation="1dp"
    android:layout_marginBottom="12dp"
    >

    <ImageView
        android:id="@+id/fruit_image_image_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/tree1"
        />

    <TextView
        android:id="@+id/fruit_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fruit_name"
        android:textSize="16sp"
        android:fontFamily="@font/binggrae_bold"
        android:layout_marginStart="12dp"
        />

    <TextView
        android:id="@+id/emotion_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/emotion"
        android:textSize="12sp"
        android:fontFamily="@font/binggrae"
        android:layout_marginStart="8dp"
        />

    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <TextView
        android:id="@+id/date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date"
        />

    <ImageView
        android:id="@+id/fruit_detail_button_image_view"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/sharp_keyboard_arrow_right_24"
        android:layout_marginStart="8dp"
        />

</LinearLayout>
