<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="340dp"
    android:layout_height="340dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_trans_radius_30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/juice_background_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <utils.OutlinedTextView
            android:id="@+id/juice_name_text_view"
            style="@style/Base.FTR.TextView.DialogMain"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:text="@string/juice_name_example"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:textStrokeColor="@color/white"
            app:textStrokeWidth="10" />

        <ImageView
            android:id="@+id/juice_image_image_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="40dp"
            android:adjustViewBounds="true"
            android:src="@drawable/juice"
            app:layout_constraintBottom_toTopOf="@id/juice_description_text_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/juice_name_text_view"
            app:layout_constraintVertical_weight="1" />

        <utils.OutlinedTextView
            android:id="@+id/juice_description_text_view"
            style="@style/Base.FTR.TextView.DialogText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="60dp"
            android:layout_marginBottom="24dp"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:maxLines="5"
            android:minLines="3"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/juice_image_image_view"
            app:textStrokeColor="@color/white"
            app:textStrokeWidth="10" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
